---
import type { Lang } from '../i18n/languages';
import { useTranslations, getLocalizedPath } from '../i18n/utils';
import ScrollReveal from './ScrollReveal.astro';

interface Props {
  title: string;
  description: string;
  thumbnail: string;
  slug: string;
  role: string;
  lang: Lang;
  index: number;
}

const { title, description, thumbnail, slug, role, lang, index } = Astro.props;
const t = useTranslations(lang);
const href = getLocalizedPath(`/work/${slug}`, lang);
---

<ScrollReveal delay={index * 100}>
  <a href={href} class="group block">
    <article class="border-b border-neutral-200 dark:border-neutral-800 py-12 md:py-16">
      <div class="max-w-content mx-auto px-6">
        <div class="grid md:grid-cols-2 gap-8 md:gap-12 items-center">
          <div class="order-2 md:order-1">
            <p class="font-mono text-xs text-neutral-500 dark:text-neutral-400 uppercase tracking-wider mb-3">
              {role}
            </p>
            <h3 class="text-2xl md:text-3xl font-display font-bold text-neutral-950 dark:text-neutral-50 mb-3 group-hover:text-neutral-600 dark:group-hover:text-neutral-300 transition-colors">
              {title}
            </h3>
            <p class="text-neutral-700 dark:text-neutral-300 mb-6 leading-relaxed">
              {description}
            </p>
            <span class="inline-flex items-center gap-2 text-sm font-medium text-neutral-950 dark:text-neutral-50 group-hover:gap-3 transition-all">
              {t('home.viewProject')}
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3" />
              </svg>
            </span>
          </div>
          <div class="order-1 md:order-2 overflow-hidden rounded-lg bg-neutral-100 dark:bg-neutral-900 aspect-[16/10]">
            <img
              src={thumbnail}
              alt={title}
              class="w-full h-full object-cover group-hover:scale-[1.02] transition-transform duration-500"
              loading="lazy"
              transition:name={`project-image-${slug}`}
            />
          </div>
        </div>
      </div>
    </article>
  </a>
</ScrollReveal>
