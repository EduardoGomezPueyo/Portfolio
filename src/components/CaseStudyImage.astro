---
interface Props {
  src: string;
  alt: string;
  caption?: string;
  full?: boolean;
}

const { src, alt, caption, full = false } = Astro.props;
---

<figure class:list={['my-12', full ? 'max-w-content mx-auto' : '']}>
  <div class="overflow-hidden rounded-lg bg-neutral-100 dark:bg-neutral-900">
    <img
      src={src}
      alt={alt}
      class="w-full h-auto"
      loading="lazy"
    />
  </div>
  {caption && (
    <figcaption class="mt-3 text-sm text-neutral-500 dark:text-neutral-400 text-center">
      {caption}
    </figcaption>
  )}
</figure>
